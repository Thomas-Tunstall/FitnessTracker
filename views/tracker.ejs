    />
    <!-- <script src="/js/theme.js"></script> -->
    <link rel="stylesheet" href="/css/style.css" />
    <link
      href="https://fonts.googleapis.com/css?family=Dosis&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <%- include ("./partials/template/navbar.ejs") %>
    <div class="body">
      <h1>Profile</h1>
      <h3>
        From here you will be able to check your progress as you go on your
        <b>Journey</b>
      </h3>

    <div class="body row introtext food-exercise">
      <H1> Projected 4 month weight loss trend</H1>
    </div>
    <div class="introtext food-exercise">
      Your projected monthly weight will be <b><%= ProjectedMonthlyWeight %></b>
      <br><br>

      If you continue to eat and exercise at this rate, after two months you will weigh be <b><%= TwoMonthLoss %></b>
      <br><br>

      If you continue to eat and exercise at this rate, after three months you will weigh <b><%= ThreeMonthLoss %></b>
      <br><br>

      If you continue to eat and exercise at this rate, after four months you will weigh <b><%= FourMonthLoss %></b>

      <div class="hiddenInfo" id="1month"><%= ProjectedMonthlyWeight %></div>
      <div class="hiddenInfo" id="2month"><%= TwoMonthLoss %></div>
      <div class="hiddenInfo" id="3month"><%= ThreeMonthLoss %></div>
      <div class="hiddenInfo" id="4month"><%= FourMonthLoss %></div>



    </div>

    <div class="row food-exercise">
      <div class="col-3"></div>
      <div class="col-6 chart-container">
        <canvas id="lineChart" height="400px" width="400px"></canvas>
      </div>
      <div class="col-3"></div>
    </div>
    <!-- Optional JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>
    <script>
    window.onload = function() {
      var month = new Array();
            month[0] = "January";
            month[1] = "February";
            month[2] = "March";
            month[3] = "April";
            month[4] = "May";
            month[5] = "June";
            month[6] = "July";
            month[7] = "August";
            month[8] = "September";
            month[9] = "October";
            month[10] = "November";
            month[11] = "December";
            var d = new Date();
            const n = month[d.getMonth()];
            const o = month[d.getMonth() + 1];
            const p = month[d.getMonth() + 2];
            const q = month[d.getMonth() + 3];

            const CHART = document.getElementById("lineChart");
            document.getElementById("1month")
            console.log(oneMonthLoss);
            var twoMonthLoss = document.getElementById("2month");
            console.log(twoMonthLoss);
            var threeMonthLoss = document.getElementById("3month");
            var fourMonthLoss = document.getElementById("4month");





            console.log(CHART);
            let lineChart = new Chart(CHART, {
              type: "line",
              data: {
                labels: [n, o, p, q],
                datasets: [
                  {
                    label: "2020",
                    data: [
                      oneMonthLoss,
                      twoMonthLoss,
                      threeMonthLoss,
                      fourMonthLoss
                    ]
                  }
                ]
              }
            });
            };
    </script>

   
